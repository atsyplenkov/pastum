{
  "name": "pastum",
  "displayName": "Pastum",
  "description": "Convert table from clipboard to R, Python or Julia dataframe",
  "version": "0.0.3",
  "publisher": "atsyplenkov",
  "license": "MIT",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/atsyplenkov/pastum"
  },
  "homepage": "https://github.com/atsyplenkov/pastum",
  "bugs": {
    "url": "https://github.com/atsyplenkov/pastum/issues",
    "email": "atsyplenkov@fastmail.com"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "paste",
    "table",
    "markdown",
    "paste table",
    "keybindings"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pastum.Rdataframe",
        "title": "Table ➔ R Dataframe",
        "category": "Pastum"
      },
      {
        "command": "pastum.Pydataframe",
        "title": "Table ➔ Python Dataframe",
        "category": "Pastum"
      },
      {
        "command": "pastum.Jldataframe",
        "title": "Table ➔ Julia Dataframe",
        "category": "Pastum"
      },
      {
        "command": "pastum.Defaultdataframe",
        "title": "Pastum ➔ Default Dataframe",
        "category": "Pastum"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "config.pastum.showContextMenu && (editorLangId == 'r' || editorLangId == 'python' || editorLangId == 'julia')",
          "command": "pastum.Defaultdataframe",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": [
      {
        "type": "object",
        "title": "Pastum Configuration",
        "properties": {
          "pastum.showContextMenu": {
            "type": "boolean",
            "default": true,
            "description": "Show the 'Paste default dataframe' command in the editor context menu."
          }
        }
      },
      {
        "type": "object",
        "title": "Pastum Configuration",
        "properties": {
          "pastum.defaultConvention": {
            "type": "string",
            "enum": [
              "PascalCase",
              "camelCase",
              "snake_case"
            ],
            "default": "PascalCase",
            "markdownDescription": "Select naming convention for variable names. For example, `Hello World!` will be converted to \n\n - PascalCase: `HelloWorld` \n\n - camelCase: `helloWorld` \n\n - snake_case: `hello_world`"
          }
        }
      },
      {
        "type": "object",
        "title": "Pastum Configuration",
        "properties": {
          "pastum.defaultDataframe": {
            "type": "string",
            "enum": [
              "R base",
              "R tibble",
              "R data.table",
              "R polars",
              "Py pandas",
              "Py datatable",
              "Py polars",
              "Jl DataFrame"
            ],
            "default": "R tibble",
            "markdownDescription": "Select default dataframe type."
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.66.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "chai": "^5.1.2",
    "mocha": "^10.7.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "jsdom": "^25.0.1"
  }
}
